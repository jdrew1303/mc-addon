{
  "manifest_version": 2,

  "name": "<%= data.pkg.name %>",
  "description": "<%= data.pkg.description %>",
  "version": "<%= data.pkg.version %>",

  "permissions": [
    "<%= data.env.API_ROOT %>/"
  ],
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "sandbox": {
    "pages": ["runner.html"]
  }
}
